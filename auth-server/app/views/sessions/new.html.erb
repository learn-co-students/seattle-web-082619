
<h1>Auth App</h1>

<% if session[:username] %>
  <%= session[:username] %>  
<% end %>

<div>
  <form method='post' action='/signin'>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    Username: <input name='username'>
    <input type='submit' value='login'>
  </form>
</div>

<%= link_to "Logout", '/logout', method: 'POST' %>